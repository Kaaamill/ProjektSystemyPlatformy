@model IndexVm
@{
    ViewData["Title"] = "Home Page";
    var userName = Model.UserName;
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #111; /* Dark background */
        color: #122; /* Lighter accent color for text */
        margin: 0;
        padding: 0;
    }

    .chat-container {
        background-color: #eed; /* Slightly lighter background */
        max-width: 900px;
        margin: 20px auto;
        border: 10px solid #8a8; /* Accent color for borders */
        border-radius: 20px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        height: 80vh;
    }

    .messages {
        flex: 1;
        overflow-y: auto;
        padding: 10px;
        display: flex;
        flex-direction: column-reverse;
    }

    .messages li {
        margin-bottom: 10px;
        padding-bottom: 5px;
        color: #122; /* Pinkish accent color for message text */
    }

    .messages li:last-child {
        border-bottom: none; /* Remove border for the last message */
    }

    .input-group {
        padding: 10px;
        display: flex;
        border-radius: 10px;
        background-color: #465; /* Match container background */
    }

    .input-group input[type="text"] {
        flex: 8;
        border: 1px solid #eed; /* Accent color for input border */
        padding: 8px;
        border-radius: 10px;
        margin-right: 5px;
        background-color: #122; /* Dark input background */
        color: #eed; /* Lighter accent color for text */
    }

    .input-group button {
        flex: 1;
        border: none;
        padding: 8px;
        border-radius: 3px;
        background-color: #122; /* Pink accent color for button */
        color: #fff; /* White text for button */
        cursor: pointer;
    }

    h1 {
        color: #133; /* Pink accent color for heading */
        text-align: center;
        margin-top: 20px;
    }

     /* Custom scrollbar styles */
    .messages::-webkit-scrollbar {
        width: 12px;
    }

    .messages::-webkit-scrollbar-track {
        background: #465; /* Slightly lighter background */
        border-radius: 10px; /* Rounded corners for track */
    }

    .messages::-webkit-scrollbar-thumb {
        background-color: #ddc; /* Pink accent color for thumb */
        border-radius: 10px; /* Rounded corners for thumb */
        border: 3px solid #465; /* Match container background */
    }

    .messages::-webkit-scrollbar-thumb:hover {
        background-color: #d55; /* Darker pink for hover effect */
    }

    /* Firefox scrollbar styles */
    .messages {
        scrollbar-width: thin;
        scrollbar-color: #ddc #465;
    }

    .messages::-webkit-scrollbar-thumb {
        border-radius: 10px;
        border: 3px solid transparent; /* Creates space around thumb */
        background-clip: content-box;
    }

</style>

<input hidden id="user" value="@userName"/>

<div>
    <h1>Witaj @userName</h1>
</div>

<div class="container-md">
    <main role="main" class="pb-3">
        <div class="chat-container">
            <div class="messages">
                <ul id="messages" class="list-unstyled">
                    @foreach (var message in Model.Messages.OrderBy(m => m.CreatedOn))
                    {
                        <li><strong>[@message.CreatedOn.ToString("dd/MM/yyyy HH:mm")], @message.UserName</strong>: @message.Message</li>
                    }
                    <li class="list-unstyled" id="userMessages"></li>
                </ul>
            </div>
            <div class="input-group">
                <input type="text" placeholder="Wiadomość..." class="form-control" id="userMessage"/>
                <button type="button" id="btnSend">Wyślij</button>
            </div>
        </div>
    </main>
</div>

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script src="js/chatApp.js"></script>
    <script>
        $(document).ready(function() {
            var messagesDiv = $('.messages');
            messagesDiv.scrollTop(messagesDiv.prop("scrollHeight"));
        });
    </script>
}
