@model SignInVm

@{
    ViewBag.Title = "Login page";
    Layout = "_Layout";
}

<div class="text-center">
    <h2>Strona Logowania</h2>
</div>

<form asp-action="SignIn" method="post" class="row">
    <div class="col-12 col-md-6 offset-md-3 py-3 form-group">
        <input class="form-control" asp-for="UserName" placeholder="Login"/>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="col-12 col-md-6 offset-md-3 py-3 form-group">
        <input class="form-control" asp-for="Password" placeholder="Hasło" type="password"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="col-12 col-md-6 offset-md-3 py-3">
        <button class="btn btn-success w-100">Zaloguj</button>
    </div>
    <div class="col-12 col-md-6 offset-md-3 py-3 text-center">
        <a class="link" asp-action="Register">Nie masz konta? Zarejestruj się</a>
    </div>
</form>
